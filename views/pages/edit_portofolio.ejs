<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Portofolio</title>
    <link rel="stylesheet" href="/upload_portofolio.css">
</head>
<body>
    <div class="dashboard-container">
        <%- include('../partials/sidebar') %>
    </div>

    <div>
        <h2>Edit Portofolio Yang Telah diupload</h2><hr>
        <div class="content">
            <form class="form" method="POST" action="/edit_portofolio" enctype="multipart/form-data">
                <!-- Hidden input untuk id portofolio -->
                <input type="hidden" name="id_portofolio" value="<%= portofolio.id_portofolio %>">
                
                <!-- Input untuk gambar dan lainnya -->
                <div class="form-row">
                    <!-- Kolom File -->
                    <div class="form-column image-column">
                        <div class="image-preview" id="imagePreview">
                            <input type="file" name="gambar" id="imageUpload" accept="image/*" class="file-input">
                            <!-- Menampilkan gambar yang ada -->
                            <img src="/uploads/<%= portofolio.gambar %>" alt="<%= portofolio.judul %>" width="250">
                        </div>
                    </div>

                    <!-- Kolom Input -->
                    <div class="form-column input-column">
                        <label>Judul</label>
                        <input type="text" name="judul" class="form-input" placeholder="Judul" value="<%= portofolio.judul %>" required>

                        <label>Deskripsi</label>
                        <input type="text" name="deskripsi" class="form-input" placeholder="Deskripsi" value="<%= portofolio.deskripsi %>" required>

                        <label>Kategori</label>
                        <select name="id_kategori" class="form-input">
                            <option value="">-- Pilih Kategori --</option>
                            <option value="1" <%= portofolio.id_kategori == 1 ? 'selected' : '' %>>Kategori 1</option>
                            <option value="2" <%= portofolio.id_kategori == 2 ? 'selected' : '' %>>Kategori 2</option>
                            <option value="3" <%= portofolio.id_kategori == 3 ? 'selected' : '' %>>Kategori 3</option>
                        </select>

                        <button type="submit" class="upload-button">Simpan Perubahan</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Preview image after selecting a file
        const fileInput = document.getElementById('imageUpload');
        const imagePreview = document.getElementById('imagePreview');

        fileInput.addEventListener('change', function () {
            const file = fileInput.files[0];
            const reader = new FileReader();

            reader.onloadend = function () {
                imagePreview.style.backgroundImage = `url(${reader.result})`;
            }

            if (file) {
                reader.readAsDataURL(file);
            } else {
                imagePreview.style.backgroundImage = '';
            }
        });
    </script>
</body>
</html>
