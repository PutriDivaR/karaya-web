<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= portofolio ? 'Edit' : 'Upload' %> Portofolio</title>
    <link rel="stylesheet" href="upload_portofolio.css">
</head>
<body>
    <div class="dashboard-container">
        <%- include('../partials/sidebar') %>
    </div>
    <div>
        <h2><%= portofolio ? 'Edit' : 'Upload' %> Portofolio</h2><hr>
        <div class="content">
            <form class="form" method="POST" action="/upload_portofolio" enctype="multipart/form-data">
                <!-- Hidden input untuk id portofolio jika sedang mengedit -->
                <input type="hidden" name="id_portofolio" value="<%= portofolio ? portofolio.id_portofolio : '' %>">
                
                <!-- Input untuk gambar dan lainnya -->
                <div class="form-row">
                    <!-- Kolom File -->
                    <div class="form-column image-column">
                        <div class="image-preview" id="imagePreview">
                            <input type="file" name="gambar" id="imageUpload" accept="image/*" class="file-input">
                            <!-- Menampilkan gambar yang ada jika portofolio sudah ada -->
                            <%= portofolio && portofolio.gambar ? `<img src="/uploads/${portofolio.gambar}" alt="Portofolio Image" width="250">` : 'Tidak ada gambar' %>
                        </div>
                    </div>

                    <!-- Kolom Input -->
                    <div class="form-column input-column">
                        <label>Judul</label>
                        <input type="text" name="judul" class="form-input" placeholder="Judul" value="<%= portofolio ? portofolio.judul : '' %>" required>

                        <label>Deskripsi</label>
                        <input type="text" name="deskripsi" class="form-input" placeholder="Deskripsi" value="<%= portofolio ? portofolio.deskripsi : '' %>" required>

                        <label>Kategori</label>
                        <select name="id_kategori" class="form-input">
                            <option value="">-- Pilih Kategori --</option>
                            <option value="1" <%= portofolio && portofolio.id_kategori == 1 ? 'selected' : '' %>>Kategori 1</option>
                            <option value="2" <%= portofolio && portofolio.id_kategori == 2 ? 'selected' : '' %>>Kategori 2</option>
                            <option value="3" <%= portofolio && portofolio.id_kategori == 3 ? 'selected' : '' %>>Kategori 3</option>
                        </select>

                        <input type="hidden" name="is_draft" id="is_draft" value="<%= portofolio && portofolio.is_draft ? portofolio.is_draft : 0 %>">

                        <button type="submit" class="upload-button" onclick="setDraft(0);">Upload</button>
                        <button type="submit" class="upload-button" onclick="setDraft(1);">Simpan Draft</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script>
        function setDraft(value) {
            document.getElementById('is_draft').value = value;
        }

        // Preview image after selecting a file
        const fileInput = document.getElementById('imageUpload');
        const imagePreview = document.getElementById('imagePreview');

        fileInput.addEventListener('change', function () {
            const file = fileInput.files[0];
            const reader = new FileReader();

            reader.onloadend = function () {
                imagePreview.style.backgroundImage = `url(${reader.result})`;
            }

            if (file) {
                reader.readAsDataURL(file);
            } else {
                imagePreview.style.backgroundImage = '';
            }
        });
    </script>
</body>
</html>
